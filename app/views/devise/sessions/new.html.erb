<div class="row">
  <div class="col-lg">
    <div class="banner-restaurant" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(/log-in-screen.jpg);">
      <div class="container">
        <h1>Log in</h1>
        <p>Start adding more vouchers for your customers to buy.</p>
      </div>
    </div>
  </div>
  <div class="col-lg price-container devise-container">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "wide-simple-form"}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>


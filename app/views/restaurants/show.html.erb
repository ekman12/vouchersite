<div class="banner-restaurant" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@restaurant.photo_url %>);">
  <div class="container">
    <h1><%=@restaurant.name %> Vouchers</h1>
    <p><%=@restaurant.tidy_address%></p>
  </div>
</div>

<% @restaurant.vouchers.each_slice(2) do |(v1, v2)| %>
  <div class="row">
    <div class="col-xl-6"><%= render 'shared/voucher_card', voucher: v1 %></div>
    <div class="col-xl-6"><%= render 'shared/voucher_card', voucher: v2 if v2 %></div>
  </div>
<% end %>

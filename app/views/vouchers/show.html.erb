<%= javascript_include_tag "https://www.paypal.com/sdk/js?client-id=#{ENV['PAYPAL_CLIENT_ID']}&currency=GBP" %>

<!-- <p id="notice"><%= notice %></p> -->

<div class="row">
  <div class="col-lg">
    <div class="banner-restaurant" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=@voucher.restaurant.photo_url %>);">
      <div class="container">
        <h1><%=@voucher.restaurant.name %></h1>
        <p><%=@voucher.restaurant.tidy_address%></p>
      </div>
    </div>
  </div>
  <div class="col-lg  price-container">
    <div class="container">
      <h3>
        <strong>Â£<%= @voucher.price %></strong> - <%= @voucher.notes %>
      </h3>
      <div class="paypal-wrapper">
        <div id="paypal-button-container"></div>
      </div>
    </div>
  </div>
</div>






<%# link_to 'Back', vouchers_path %>
<script>
  paypal.Buttons({
    createOrder: function(data, actions) {
      // This function sets up the details of the transaction, including the amount and line item details.
      return actions.order.create({
        purchase_units: [{
          amount: {
            value: <%= @voucher.price %>,
            currency: 'GBP'
          }
        }]
      });
    },
    onApprove: function(data, actions) {
      // This function captures the funds from the transaction.
      return actions.order.capture().then(function(details) {
        // This function shows a transaction success message to your buyer.
        alert('Transaction completed by ' + details.payer.name.given_name);
      });
    }
  }).render('#paypal-button-container');
  //This function displays Smart Payment Buttons on your web page.
</script>

